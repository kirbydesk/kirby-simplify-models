{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["provider", "models"],
  "properties": {
    "provider": {
      "type": "object",
      "required": ["id", "name", "url"],
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the provider"
        },
        "name": {
          "type": "string",
          "description": "Display name of the provider"
        },
        "url": {
          "type": "string",
          "format": "uri",
          "description": "Provider's website URL"
        }
      },
      "additionalProperties": false
    },
    "models": {
      "type": "object",
      "patternProperties": {
        "^.*$": {
          "type": "object",
          "required": ["status", "quality", "recommended", "temperature"],
          "properties": {
            "status": {
              "type": "string",
              "description": "Current status of the model (e.g., 'unknown', 'issues', 'active')"
            },
            "quality": {
              "type": "integer",
              "description": "Quality rating of the model"
            },
            "recommended": {
              "type": "boolean",
              "description": "Whether this model is recommended"
            },
            "temperature": {
              "type": "boolean",
              "description": "Whether the model supports temperature parameter"
            },
            "output_token_limit": {
              "oneOf": [
                {
                  "type": "integer",
                  "minimum": 0
                },
                {
                  "type": "null"
                }
              ],
              "description": "Maximum output token limit, or null if not applicable"
            },
            "url": {
              "type": "string",
              "format": "uri",
              "description": "URL to model documentation"
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
